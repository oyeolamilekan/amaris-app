{
  "name": "@amaris/db",
  "main": "./src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "bun run --bun tsdown",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio --host 0.0.0.0 --port ${PORT:-4983}",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/migrate.ts"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.2",
    "@types/pg": "^8.11.11",
    "tsdown": "catalog:",
    "@amaris/config": "workspace:*"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.2",
    "pg": "^8.14.1",
    "dotenv": "catalog:",
    "zod": "catalog:"
  }
}
